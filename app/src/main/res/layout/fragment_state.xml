<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/new_notice"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/new_notice"/>
            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="我的状态"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/refresh"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <!--<ScrollView-->
        <!--android:layout_below="@id/toolbar"-->
         <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!---->
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
 <!---->
            <!--司机照片和信息-->
            <LinearLayout
                android:layout_below="@id/toolbar"
                android:background="#FFFFFF"
                android:id="@+id/driver_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">
                <!---司机照片-->
                <ImageView
                    android:id="@+id/head_pic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"/>
                <!---司机照片-->

                <!--司机信息-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--姓名-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="姓名："/>
                        <TextView
                            android:id="@+id/driver_name"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!--编号-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="编号："
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/driver_number"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!--等级-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="等级："
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/driver_level"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!--星级-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="星级："
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <RelativeLayout
                            android:id="@+id/starRl"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                            <ImageView
                                android:layout_gravity="left"
                                android:id="@+id/star1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/un_star"
                                android:layout_alignParentLeft="true"/>
                            <ImageView
                                android:layout_gravity="left"
                                android:id="@+id/star2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/un_star"
                                android:layout_toRightOf="@id/star1"/>
                            <ImageView
                                android:layout_gravity="left"
                                android:id="@+id/star3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/un_star"
                                android:layout_toRightOf="@id/star2"/>
                            <ImageView
                                android:layout_gravity="left"
                                android:id="@+id/star4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/un_star"
                                android:layout_toRightOf="@id/star3"/>
                            <ImageView
                                android:layout_gravity="left"
                                android:id="@+id/star5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/un_star"
                                android:layout_toRightOf="@id/star4"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <!--状态-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="状态："
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/status_tv"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="忙碌"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <!--状态-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--司机信息-->

            <!--我的工作信息-->
            <LinearLayout
                android:onClick="onClick"
                android:id="@+id/my_work_info"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/driver_info">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:src="@drawable/word_info"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="我的工作信息"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:src="@drawable/arrow_right_two"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!--账户、收入等信息-->
            <LinearLayout
                android:id="@+id/account"
                android:background="#FFFFFF"
                android:layout_below="@id/my_work_info"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--账户余额-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="9dp"
                        android:text="账户余额"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/user_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:paddingRight="8dp"/>
                    <TextView
                        android:id="@+id/account_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="明细"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <RelativeLayout android:id="@+id/status_deposit"
                                    android:background="@drawable/pay_money"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值"
                            android:textSize="10sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
                <!--今天收入-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="9dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="今天收入"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/today"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:paddingRight="8dp"/>
                    <TextView
                        android:id="@+id/today_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textSize="10sp"
                        android:text="明细"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical">
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
                <!--本月收入-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="9dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="本月收入"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/month"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:paddingRight="8dp"/>
                    <TextView
                        android:id="@+id/month_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textSize="10sp"
                        android:text="明细"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <RelativeLayout android:id="@+id/status_tixian"
                                    android:background="@drawable/salary_info_bg"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提现"
                            android:textSize="10sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
                <!--收入明细-->
                <LinearLayout
                    android:id="@+id/salary_detail"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="9dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="收入明细"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_right_two"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <!--当前积分-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="9dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="当前积分"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/points"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:paddingRight="8dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textSize="10sp"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical">
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
            <!--上、下班状态滑动切换-->
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_below="@id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="上班"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
                <bjx.com.siji.ui.button.SlipButton
                    android:id="@+id/on"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="下班"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:text=""/>
            </LinearLayout>

        <!--</RelativeLayout>-->

    <!--</ScrollView>-->

</RelativeLayout>
