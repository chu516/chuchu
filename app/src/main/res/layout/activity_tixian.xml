<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLight"
    android:id="@+id/tixian_ll"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include android:id="@+id/toolbar" layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/oval_border_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="账户余额"/>

            <TextView android:id="@+id/tixian_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/yellow"
                android:text="0.00"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="选择提现金额"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView android:id="@+id/tixian_tv_depomoney1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_grey"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="¥100"/>

            <TextView android:id="@+id/tixian_tv_depomoney2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_grey"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="¥300"/>

            <TextView android:id="@+id/tixian_tv_depomoney3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_grey"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="¥500"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView android:id="@+id/tixian_tv_depomoney4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_grey"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="¥700"/>

            <TextView android:id="@+id/tixian_tv_depomoney5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_grey"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="¥900"/>

            <TextView android:id="@+id/tixian_tv_depomoney6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_grey"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="¥1000"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <EditText android:id="@+id/tixian_et_depomoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white_grey"
                android:paddingLeft="10dp"
                android:paddingRight="25dp"
                android:inputType="number"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="8"
                android:hint="请输入提现金额"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="元"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" android:visibility="visible">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/left_account"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="支付宝账户："/>

            <EditText android:id="@+id/tixian_et_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="30"
                android:hint="请输入支付宝帐号"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView android:id="@+id/tixian_tv_tixian"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_blue_smallradius"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="立即提现" />

    </LinearLayout>
</LinearLayout>