<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marign_mini"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_favorite_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/bga_refresh_loding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marign_normal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/marign_normal"
                android:layout_marginRight="@dimen/marign_normal"
                android:layout_weight="2"
                android:gravity="left|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_favorite_title_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingRight="40dp"
                    android:singleLine="true"
                    android:text="商品名称"
                    android:textColor="@color/text_font_black"
                    android:textSize="@dimen/size_middle"
                    />

                <TextView
                    android:id="@+id/item_favorite_mobile_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="甜蜜多汁 软如爽口软如爽口软如爽口"
                    android:textColor="@color/text_font_black"
                    android:textSize="@dimen/size_15"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/marign_normal"
                android:layout_marginRight="@dimen/marign_middle"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/item_favorite_distance_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="月售88单"
                    android:textColor="@color/text_font_black_light"
                    android:textSize="@dimen/marign_big"/>

                <TextView
                    android:id="@+id/item_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/marign_middle"
                    android:layout_toRightOf="@+id/item_favorite_distance_iv"
                    android:singleLine="true"
                    android:text="状态"
                    android:textColor="@color/red"
                    android:textSize="@dimen/size_14"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/divider_line_color" />-->

</LinearLayout>