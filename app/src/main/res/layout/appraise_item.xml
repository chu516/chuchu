<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/customer_phone"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="12sp"
            android:layout_height="wrap_content"></TextView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:textSize="12sp"
                android:id="@+id/appraise_time"
                android:textColor="@color/black"
                android:text="2017-11-27 15:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"></TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:text="综合评分："
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"></TextView>
        <RelativeLayout
            android:id="@+id/starRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/star1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/un_star"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/star2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/un_star"
                android:layout_toRightOf="@id/star1"/>
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/star3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/un_star"
                android:layout_toRightOf="@id/star2"/>
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/star4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/un_star"
                android:layout_toRightOf="@id/star3"/>
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/star5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/un_star"
                android:layout_toRightOf="@id/star4"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/appraise_content"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
